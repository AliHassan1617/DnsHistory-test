---
import Card from './ui/Card.astro';
import CardHeader from './ui/CardHeader.astro';
import CardContent from './ui/CardContent.astro';
import CardTitle from './ui/CardTitle.astro';
import CardDescription from './ui/CardDescription.astro';
import Button from './ui/Button.astro';
import productsData from '../data/products.json';

const { products } = productsData;

export interface Props {
  filter?: string;
}

const { filter } = Astro.props;

const filteredProducts = filter
  ? products.filter((p) => p.id === filter)
  : products;

const iconMap = {
  globe: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9m0 9c-5 0-9-4-9-9s4-9 9-9m0 18v-9"></path></svg>`,
  shield: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.031 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>`,
  search: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>`
};
---

<section class="py-20 bg-card/50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    
    
    <!-- Products Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {filteredProducts.map((product) => (
        <Card glass class="group hover:scale-105 transition-all duration-300 border-white/20">
          <CardHeader>
            <div class="flex items-center justify-between mb-4">
              <div class="p-3 rounded-lg bg-primary/20 text-primary group-hover:bg-primary group-hover:text-primary-foreground transition-colors duration-300">
                <Fragment set:html={iconMap[product.icon]} />
              </div>
              <span class="text-xs font-medium text-muted-foreground bg-muted/20 px-2 py-1 rounded-full">
                {product.category}
              </span>
            </div>
            <CardTitle class="text-white group-hover:text-primary transition-colors duration-300">
              {product.name}
            </CardTitle>
            <CardDescription class="text-white/70">
              {product.shortDescription}
            </CardDescription>
          </CardHeader>
          
          <CardContent>
            <p class="text-white/60 mb-6 leading-relaxed">
              {product.description}
            </p>
            
            <!-- Features -->
            <div class="mb-6">
              <h4 class="text-sm font-semibold text-white/80 mb-3">Key Features:</h4>
              <ul class="space-y-2">
                {product.features.slice(0, 3).map((feature) => (
                  <li class="flex items-center text-sm text-white/60">
                    <svg class="w-4 h-4 text-primary mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
            
            <Button 
              variant="outline" 
              href={product.href}
              class="w-full border-white/30 text-white hover:bg-white/10"
            >
              Learn More
            </Button>
          </CardContent>
        </Card>
      ))}
    </div>
    
    
  </div>
</section>
