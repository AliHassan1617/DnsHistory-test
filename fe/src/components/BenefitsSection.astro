---
import siteData from '../data/site.json';

const { benefits } = siteData;

const iconMap = {
  code: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path></svg>`,
  zap: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>`,
  activity: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path></svg>`,
  shield: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.031 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>`
};
---

<section class="py-20 bg-background">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-4">
        Why Choose Zoros.io?
      </h2>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
        Built for developers who need reliable, fast, and comprehensive cybersecurity data
      </p>
    </div>
    
    <!-- Benefits Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {benefits.map((benefit, index) => (
        <div class="text-center group">
          <!-- Icon -->
          <div class="inline-flex items-center justify-center w-20 h-20 rounded-2xl bg-primary/10 text-primary mb-6 group-hover:bg-primary group-hover:text-primary-foreground transition-all duration-300 group-hover:scale-110">
            <Fragment set:html={iconMap[benefit.icon]} />
          </div>
          
          <!-- Content -->
          <h3 class="text-xl font-semibold text-foreground mb-4 group-hover:text-primary transition-colors duration-300">
            {benefit.title}
          </h3>
          <p class="text-muted-foreground leading-relaxed">
            {benefit.description}
          </p>
        </div>
      ))}
    </div>
    
    <!-- Stats Section -->
    <div class="mt-20 pt-16 border-t border-white/10">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-4xl font-bold text-primary mb-2">99.9%</div>
          <div class="text-muted-foreground">Uptime SLA</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-primary mb-2">10B+</div>
          <div class="text-muted-foreground">Data Points</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-primary mb-2">50ms</div>
          <div class="text-muted-foreground">Response Time</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-primary mb-2">500+</div>
          <div class="text-muted-foreground">Enterprise Customers</div>
        </div>
      </div>
    </div>
  </div>
</section>
